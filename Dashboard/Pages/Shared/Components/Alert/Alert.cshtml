@using System.Web
@model GuideViewModel

@{
    Layout = null;
 <title>@(Model?.Title ?? " ")</title>
}

@if (Model != null)
{

    <section class="content k-rtl" style="min-height: 1px !important;margin-bottom: -58px !important;">
        <div class="callout callout-info">
            <a class="btn btn-success pull-left l-turquoise m-t--30 collapsed" style="float: left;margin-bottom: 28px;background-color: #00a65a !important;border-color: #008d4c !important;bottom: 140px;width: 70px;" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false">
                راهنما
            </a>

            <h4>راهنما!</h4>
            جهت معرفی و آشنایی با امکانات این صفحه ، بر روی گزینه "راهنما" کلیک کنید .


        </div>

    </section>

    <section class="content k-rtl" style="min-height: 1px !important;margin-bottom: -58px !important;">
        <div class="col-md-12">
            <div class="m-t-10 collapse" id="collapseExample" aria-expanded="false" style="">
                <div class="alert alert-info" style="  background-color:#9dd6e4 !important; max-height: 400px;overflow-y: auto;margin: 0px 10px 10px 10px;">
                    @Html.Raw(HttpUtility.HtmlDecode(Model?.Description ?? "كاربر گرامي ، راهنماي اين صفحه ، در حال تهيه و تنظيم مي باشد . ممكن است تا بازديد بعدي شما ، تكميل گردد."))
                </div>
            </div>
        </div>
    </section>
}
